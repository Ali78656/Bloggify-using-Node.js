<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>Show Blog</title>
  </head>
  <body>
    <%- include('./partials/nav') %>
    <div class="container mt-5">
      <div class="card p-4 shadow-lg border-0">
        <h1 class="mb-3 text-center"><%= blog.title %></h1>
        <div class="text-center mb-4">
          <img
            src="<%= blog.coverImageURL %>"
            alt="Blog Image"
            class="img-fluid rounded"
            style="max-height: 400px; object-fit: cover"
          />
        </div>
        <div class="blog-body mb-4">
          <p class="lead"><%= blog.body %></p>
        </div>
        <% if (blog.createdBy) { %>
        <div class="d-flex align-items-center mb-4 border-top pt-3">
          <img
            src="<%= blog.createdBy.profileImage %>"
            class="rounded-circle me-3"
            width="50px"
            height="50px"
            alt="Author Profile Image"
          />
          <p class="mb-0">
            By: <strong><%= blog.createdBy.fullName %></strong>
          </p>
        </div>
        <% } %>

        <h2 class="mb-3">Comments (<%= comments.length %>)</h2>
        <% if (typeof error !== 'undefined') { %>
        <div class="alert alert-danger"><%= error %></div>
        <% } %> <% if (locals.user) { %>
        <div class="card p-3 mb-4 shadow-sm">
          <form action="/blog/comment/<%= blog.id %>" method="post">
            <div class="mb-3">
              <label for="commentContent" class="form-label"
                >Add a Comment</label
              >
              <textarea
                name="content"
                class="form-control"
                id="commentContent"
                rows="3"
                placeholder="Write your comment here..."
              ></textarea>
            </div>
            <button type="submit" class="btn btn-primary">
              Submit Comment
            </button>
          </form>
        </div>
        <% } %>

        <div class="comments-list">
          <% comments.forEach(comment => { %>
          <div class="card mb-3 p-3 shadow-sm">
            <div class="d-flex align-items-center mb-2">
              <img
                src="<%= comment.createdBy.profileImage %>"
                class="rounded-circle me-3"
                width="40px"
                height="40px"
                alt="Commenter Profile Image"
              />
              <p class="mb-0">
                <strong><%= comment.createdBy.fullName %></strong>
              </p>
            </div>
            <p class="mb-0"><%= comment.content %></p>
          </div>
          <% }) %>
        </div>
      </div>
    </div>
    <%- include('./partials/script') %>
  </body>
</html>
